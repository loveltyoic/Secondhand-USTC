<%= simple_form_for @product do |f| %>
  <%= f.input :title, label: '标题' %>
  <%= f.input :tag, label: '标签', collection: ['出售', '求购', '估价'] %>
  <div id="pic-url">
    <div class="form-group">
      <label class="control-label col-lg-2">图片地址</label>
      <div class="col-lg-10">
        <input name=product[picture][0] class="form-control" type='text'></input>
      </div>
    </div>
  </div>
  <a id="add_pic" href="#">增加图片</a>
  <%= f.input :url %>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <button type="submit" class="btn btn-primary">发布</button>
    </div>
  </div>
<% end %>
<script>
var count=1;
$('#add_pic').click(function(){
  $('#pic-url').append('<div class="form-group"><div class="col-lg-offset-2 col-lg-10"><input name=product[picture]['+(count++)+'] type="text" class="form-control"></input></div></div>');
});
</script>